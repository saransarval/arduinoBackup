#BYTE TRISA=0X85
#BYTE TRISB=0X86
#BYTE TRISC=0X87

#BYTE PORTA=0X05
#BYTE PORTB=0X06
#BYTE PORTC=0X07

////////////////////////////////////////////////
////////////////////////////////////////////////
///////  LED PIN ON THE ROBO KIT       /////////
////////////////////////////////////////////////
////////////////////////////////////////////////

#BIT LED=PORTB.0


////////////////////////////////////////////////
////////////////////////////////////////////////
///////          MAIN PROGRAM          /////////
////////////////////////////////////////////////
////////////////////////////////////////////////


VOID MAIN()
{
         //76543210// RESPECTIVE PINS IN THE PORT// 0B REFERS TO BINARY// 0X REFERS TO HEX
   TRISB=0B00000000;                      /// PIN 0 IS REQUIRED TO BE O/P, HERE ALL ARE O/P
   PORTB=0B00000000;                      // INITILA STATUS OF PIN IS MADE TO BE 0

   WHILE(1)
   {

////////////////////////////////////////////////
////////////////////////////////////////////////
///////          LED BLINKING          /////////
////////////////////////////////////////////////
////////////////////////////////////////////////
      LED=1;
      DELAY_MS(1000);////////////////////////INBUILT DELAY FUNCTION, MS REFERS TO MILLI SECONDS
      LED=0;         ////////////////////////WE CAN ASLO REFER IN MICRO SECONDS USING US
      DELAY_MS(1000);
   }
}

