#INCLUDE<16F876A.H>                          ////////////// HEADER FILE/////////
#USE DELAY(CLOCK=11059200)                   /// DELAY FUNCTION (PRE DEFINED) //


////////////////////////////////////////////////
////////////////////////////////////////////////
///////  REFERING THE REGISTER ADDRESS /////////
////////////////////////////////////////////////
////////////////////////////////////////////////

#BYTE TRISA=0X85
#BYTE TRISB=0X86
#BYTE TRISC=0X87

#BYTE PORTA=0X05
#BYTE PORTB=0X06
#BYTE PORTC=0X07

////////////////////////////////////////////////
////////////////////////////////////////////////
///////  LED,KEY PIN ON THE ROBO KIT       /////////
////////////////////////////////////////////////
////////////////////////////////////////////////

#BIT LED=PORTB.0
#BIT KEY1=PORTB.1
#BIT KEY2=PORTB.2
#byte option_reg=0x81

////////////////////////////////////////////////
////////////////////////////////////////////////
///////          MAIN PROGRAM          /////////
////////////////////////////////////////////////
////////////////////////////////////////////////


VOID MAIN()
{
         //76543210// RESPECTIVE PINS IN THE PORT// 0B REFERS TO BINARY// 0X REFERS TO HEX
   TRISB=0B00000110;                 /// PIN 1,2 IS REQUIRED TO BE I/P, ALL OTHERS ARE O/P
   PORTB=0B00000000;                 /// INITILA STATUS OF PIN IS MADE TO BE 0
   option_reg=0x00;
   WHILE(1)
   {

////////////////////////////////////////////////
////////////////////////////////////////////////
///////          LED ON/OFF CONTROL   /////////
////////////////////////////////////////////////
////////////////////////////////////////////////

      IF(KEY1==0)
      {
      DELAY_MS(300);//////////INBUILT DELAY FUNCTION, MS REFERS TO MILLI SECONDS
      LED=1;        //////////WE CAN ASLO REFER IN MICRO SECONDS USING US
      }

      IF(KEY2==0)
      {
      DELAY_MS(300);
      LED=0;
      }

   }
}

